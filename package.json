{
  "name": "ingredient",
  "version": "0.0.1",
  "description": "hypothetical core organizational dependency",
  "main": "ingredient.js",
  "scripts": {
    "preinstall": "git clone https://github.com/sourdough/wildtype.git ./lib/wildtype || git -C ./lib/wildtype fetch --all --tags ",
    "install": "git -C ./lib/wildtype stash && git -C ./lib/wildtype checkout tags/v$npm_package_version ",
    "postinstall": "echo 'ingredient has external dependencies at $npm_package_version' && git -C ./lib/wildtype status",
    "test": "echo 'npm dependency that manages its own with git'"
  },
